<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Marvin\System\Domain\Model\ActionRequest"
        repository-class="Marvin\System\Infrastructure\Persistence\Doctrine\ORM\ActionRequestOrmRepository"
        table="system_action_request"
    >
        <id name="id" type="action_request_id">
            <generator strategy="NONE" />
        </id>

        <field name="correlationId" />
        <field name="entityType" length="32" />
        <field name="entityId" length="64" />
        <field name="action" length="32" />
        <field name="status" length="32" enum-type="Marvin\System\Domain\ValueObject\ActionStatus" />
        <field name="input" type="json" nullable="true" />
        <field name="output" type="text" nullable="true" />
        <field name="error" type="text" nullable="true" />
        <field name="completedAt" type="datetime" nullable="true" />
        <field name="createdAt" type="datetime" />
    </entity>
</doctrine-mapping>
