<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Marvin\Security\Domain\Model\User"
        repository-class="Marvin\Security\Infrastructure\Persistence\Doctrine\ORM\UserOrmRepository"
        table="security_user"
    >
        <id name="id" type="user_id">
            <generator strategy="NONE" />
        </id>
        <field name="email" type="email" unique="true" />
        <embedded name="firstname" class="Marvin\Security\Domain\ValueObject\Firstname" />
        <embedded name="lastname" class="Marvin\Security\Domain\ValueObject\Lastname" />
        <embedded name="roles" class="Marvin\Security\Domain\ValueObject\Roles" />
        <embedded name="locale" class="Marvin\Shared\Domain\ValueObject\Locale" />
        <embedded name="theme" class="Marvin\Shared\Domain\ValueObject\Theme" />
        <field name="status" enum-type="Marvin\Security\Domain\ValueObject\UserStatus" />
        <field name="type" enum-type="Marvin\Security\Domain\ValueObject\UserType" />
        <field name="password" length="255" />
        <embedded name="timezone" class="Marvin\Security\Domain\ValueObject\Timezone" />
        <field name="updatedAt" type="datetime" nullable="true" />
        <field name="createdAt" type="datetime" />
    </entity>
</doctrine-mapping>
