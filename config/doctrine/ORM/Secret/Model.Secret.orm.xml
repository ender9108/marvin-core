<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
        name="Marvin\Secret\Domain\Model\Secret"
        table="secret_secret"
        repository-class="Marvin\Secret\Infrastructure\Persistence\Doctrine\ORM\SecretOrmRepository"
    >
        <id name="id" type="secret_id"/>

        <embedded name="key" class="Marvin\Secret\Domain\ValueObject\SecretKey"/>
        <embedded name="value" class="Marvin\Secret\Domain\ValueObject\SecretValue"/>
        <field name="scope" length="20"/>
        <field name="category" length="30"/>
        <embedded name="rotationPolicy" class="Marvin\Secret\Domain\ValueObject\RotationPolicy"/>
        <field name="lastRotatedAt" type="datetime_immutable" nullable="true" column="last_rotated_at"/>
        <field name="expiresAt" type="datetime_immutable" nullable="true" column="expires_at"/>
        <embedded name="metadata" class="Marvin\Shared\Domain\ValueObject\Metadata"/>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at" nullable="true"/>
    </entity>
</doctrine-mapping>
