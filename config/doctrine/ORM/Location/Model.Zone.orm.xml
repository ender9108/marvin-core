<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Marvin\Location\Domain\Model\Zone"
        repository-class="Marvin\Location\Infrastructure\Persistence\Doctrine\ORM\ZoneOrmRepository"
        table="location_zone"
    >
        <id name="id" type="zone_id">
            <generator strategy="NONE" />
        </id>

        <embedded name="zoneName" class="Marvin\Location\Domain\ValueObject\ZoneName" />
        <field name="slug" length="255" />
        <embedded name="path" class="Marvin\Location\Domain\ValueObject\ZonePath" />
        <field name="icon" nullable="true" length="50" />

        <embedded name="currentTemperature" class="Marvin\Location\Domain\ValueObject\Temperature" />
        <embedded name="currentPowerConsumption" class="Marvin\Location\Domain\ValueObject\PowerConsumption" />
        <embedded name="currentHumidity" class="Marvin\Location\Domain\ValueObject\Humidity" />
        <field name="isOccupied" type="boolean" nullable="true" />
        <field name="noMotionCounter" type="integer" />
        <field name="activeSensorsCount" type="integer" />
        <field name="lastMetricsUpdate" type="datetime" nullable="true" />

        <field name="deviceIds" type="array_simple" />
        <field name="deviceTemperatures" type="json" />
        <field name="deviceHumidities" type="json" />
        <field name="devicePowerConsumptions" type="json" />

        <one-to-many
            field="childrens"
            target-entity="Marvin\Location\Domain\Model\Zone"
            mapped-by="parent"
        />
        <many-to-one field="parent" target-entity="Marvin\Location\Domain\Model\Zone" />

        <embedded name="targetTemperature" class="Marvin\Location\Domain\ValueObject\Temperature" />
        <embedded name="targetPowerConsumption" class="Marvin\Location\Domain\ValueObject\PowerConsumption" />
        <embedded name="targetHumidity" class="Marvin\Location\Domain\ValueObject\Humidity" />

        <embedded name="surfaceArea" class="Marvin\Location\Domain\ValueObject\SurfaceArea" />
        <field name="orientation" length="32" nullable="true" enum-type="Marvin\Location\Domain\ValueObject\Orientation" />
        <embedded name="color" class="Marvin\Location\Domain\ValueObject\HexaColor" />
        <embedded name="metadata" class="Marvin\Shared\Domain\ValueObject\Metadata" />

        <field name="updatedAt" type="datetime" nullable="true" />
        <field name="createdAt" type="datetime" />
    </entity>
</doctrine-mapping>
