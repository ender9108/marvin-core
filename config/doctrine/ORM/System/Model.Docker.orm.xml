<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Marvin\System\Domain\Model\Docker"
        table="system_docker"
    >
        <id name="id" type="docker_id">
            <generator strategy="NONE" />
        </id>

        <field name="containerId" type="string" length="128" nullable="true" />
        <field name="containerName" type="string" length="255" nullable="true" />
        <field name="containerImage" type="string" length="255" nullable="true" />
        <field name="containerService" type="string" length="255" nullable="true" />
        <field name="containerState" type="string" length="64" nullable="true" />
        <field name="containerStatus" type="string" length="255" nullable="true" />
        <field name="containerProject" type="string" length="255" nullable="true" />
        <field name="definition" type="json" />

        <one-to-many field="dockerCommands" target-entity="Marvin\System\Domain\Model\DockerCommand" mapped-by="docker" orphan-removal="true" fetch="LAZY">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>

        <embedded name="createdAt" class="Marvin\Shared\Domain\ValueObject\CreatedAt" />
        <embedded name="updatedAt" class="Marvin\Shared\Domain\ValueObject\UpdatedAt" />
    </entity>
</doctrine-mapping>
