<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Marvin\System\Domain\Model\Plugin"
        repository-class="Marvin\System\Infrastructure\Persistence\Doctrine\ORM\PluginOrmRepository"
        table="system_plugin"
    >
        <id name="id" type="plugin_id">
            <generator strategy="NONE" />
        </id>

        <embedded name="label" class="Marvin\Shared\Domain\ValueObject\Label" />
        <embedded name="reference" class="Marvin\Shared\Domain\ValueObject\Reference" />
        <embedded name="description" class="Marvin\Shared\Domain\ValueObject\Description" />
        <embedded name="version" class="Marvin\System\Domain\ValueObject\Version" />
        <embedded name="metadata" class="Marvin\System\Domain\ValueObject\Metadata" />
        <many-to-one field="status" target-entity="Marvin\System\Domain\Model\PluginStatus">
            <join-column />
        </many-to-one>
    </entity>
</doctrine-mapping>
