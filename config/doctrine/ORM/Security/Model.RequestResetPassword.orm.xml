<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Marvin\Security\Domain\Model\RequestResetPassword"
        repository-class="Marvin\Security\Infrastructure\Persistence\Doctrine\ORM\RequestResetPasswordOrmRepository"
        table="security_request_reset_password"
    >
        <id name="id" type="request_reset_password_id">
            <generator strategy="NONE" />
        </id>

        <field name="token" type="string" length="255" />
        <field name="used" type="boolean" />

        <many-to-one field="user" target-entity="Marvin\Security\Domain\Model\User">
            <join-column nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <embedded name="expiresAt" class="Marvin\Security\Domain\ValueObject\ExpiresAt" />
        <embedded name="createdAt" class="Marvin\Shared\Domain\ValueObject\CreatedAt" />
    </entity>
</doctrine-mapping>
