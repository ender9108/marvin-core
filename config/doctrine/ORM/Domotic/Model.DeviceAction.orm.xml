<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Marvin\Domotic\Domain\Model\DeviceAction"
        repository-class="Marvin\Domotic\Infrastructure\Persistence\Doctrine\ORM\DeviceActionOrmRepository"
        table="domotic_device_action"
    >
        <id name="id" type="device_action_id">
            <generator strategy="NONE" />
        </id>
        <many-to-one field="device" target-entity="Marvin\Domotic\Domain\Model\Device" inversed-by="deviceActions">
            <join-column />
        </many-to-one>
        <embedded name="updatedAt" class="Marvin\Shared\Domain\ValueObject\UpdatedAt" />
        <embedded name="createdAt" class="Marvin\Shared\Domain\ValueObject\CreatedAt" />
    </entity>
</doctrine-mapping>
