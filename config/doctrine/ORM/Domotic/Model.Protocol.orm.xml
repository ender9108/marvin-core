<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
        name="Marvin\Domotic\Domain\Model\Protocol"
        repository-class="Marvin\Domotic\Infrastructure\Persistence\Doctrine\ORM\ProtocolOrmRepository"
        table="domotic_protocol"
    >
        <id name="id" type="protocol_id">
            <generator strategy="NONE" />
        </id>

        <embedded name="label" class="Marvin\Shared\Domain\ValueObject\Label" />
        <embedded name="reference" class="Marvin\Shared\Domain\ValueObject\Reference" />
        <embedded name="status" class="Marvin\Domotic\Domain\ValueObject\ProtocolStatus" />
        <embedded name="description" class="Marvin\Shared\Domain\ValueObject\Description" />
        <embedded name="metadata" class="Marvin\SHared\Domain\ValueObject\Metadata" />
        <embedded name="updatedAt" class="Marvin\Shared\Domain\ValueObject\UpdatedAt" />
        <embedded name="createdAt" class="Marvin\Shared\Domain\ValueObject\CreatedAt" />
    </entity>
</doctrine-mapping>
